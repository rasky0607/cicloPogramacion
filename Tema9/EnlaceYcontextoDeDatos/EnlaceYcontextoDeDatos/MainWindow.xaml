<Window x:Class="EnlaceYcontextoDeDatos.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid Name="grdPrincipal" DataContext="Times New Roman">
        <!-- Binding enlaza al contexto de datos, o a quein se le diga, no tiene que ser un contexto de datos exclusivamente-->
        <TextBlock Text="{Binding}" FontFamily="{Binding}" ToolTip="{Binding}" FontSize="35" Margin="94,65,107,174">
            <TextBlock.Effect>
                <DropShadowEffect/>
            </TextBlock.Effect>
        </TextBlock>
        <Button Content="Button" HorizontalAlignment="Left" Margin="205,169,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
    </Grid>
</Window>
